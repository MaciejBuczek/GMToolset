@model GMToolset.Presentation.ViewModels.EditRoleViewModel
@{
    ViewData["Title"] = "EDIT ROLE";
    var counter = 1;
}

<form method="post" class="row">
    <div class="mt-3 col-4">
        <div class="form-group row">
            <label asp-for="Id" class="col-form-label col-2"></label>
            <input asp-for="Id" disabled class="form-control col-9 p-2" />
        </div>
        <div class="form-group row">
            <label asp-for="RoleName" class="col-form-label col-2"></label>
            <input asp-for="RoleName" class="form-control col-9 p-2" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <a asp-action="Index" class="btn btn-warning">Back</a>
            <button type="submit" class="btn btn-success">Update</button>
        </div>
    </div>
    <div class="col-1"></div>
    <div class="col-5">
        <h3>Users with @Model.RoleName role</h3>

        <table class="table table-striped col-8">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Username</th>
                    <th scope="col">Email</th>
                    <th scope="col">Roles</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                    <tr>
                        <td class="form-label">@counter</td>
                        <td class="form-label">@user.UserName</td>
                        <td class="form-label">@user.Email</td>
                    </tr>
                    counter++;
                }
            </tbody>
        </table>
        <div>
            <a asp-action="EditUsersInRole" asp-route-id="@Model.Id" class="btn btn-primary">Add/Remove users in role</a>
        </div>
    </div>
</form>
